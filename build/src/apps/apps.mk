#源码目录
APPS_SRC_DIR := $(TOP_DIR)/src/apps
#输出目录
APPS_TARGET_DIR        := $(APPS_SRC_DIR)/out
#目标名称
APPS_TARGET_NAME       := apps

APPS_COMPILE_OPT  := -C $(APPS_SRC_DIR)  CC=$(TARGET_CC) AR=$(TARGET_AR) TARGET_DIR=$(APPS_TARGET_DIR) TARGET_NAME=$(APPS_TARGET_NAME) INSTALL_DIR=$(APPS_TARGET_DIR)

$(APPS_TARGET_NAME):
	$(MAKEFILE_V)make $(APPS_COMPILE_OPT) all

$(APPS_TARGET_NAME)-clean:
	$(MAKEFILE_V)make $(APPS_COMPILE_OPT) clean

APPS += $(APPS_TARGET_NAME)
APPS_CLEAN += $(APPS_TARGET_NAME)-clean

.PHONY: $(APPS_TARGET_NAME) $(APPS_TARGET_NAME)-clean